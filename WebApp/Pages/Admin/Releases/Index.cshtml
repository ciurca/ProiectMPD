@page
@model ProiectMPD.Pages.Releases.IndexModel

@{
    ViewData["Title"] = "Releases";
}

<h1>Releases</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Release[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release[0].Artist.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release[0].Language)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release[0].Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release[0].Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Release) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
