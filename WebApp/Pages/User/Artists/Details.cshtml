@page
@model ProiectMPD.Pages.User.Artists.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Country)
        </dd>
    </dl>
</div>
<div>
    <h4>Releases</h4>
    @foreach (var release in Model.Artist.Releases)
    {
        <div>
            <a asp-page="/User/Releases/Details" asp-route-id="@release.ID">@release.Name</a>
        </div>
    }
</div>
